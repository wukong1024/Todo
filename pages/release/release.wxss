.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgb(68, 68, 68);
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 650rpx;
  height: 900rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1001;
  background: rgb(255, 255, 255);
  margin:80rpx 50rpx 0 50rpx;
  border-radius: 3px;
}

.drawer_title{
  padding:30rpx;
  padding-bottom: 20rpx;
  font: 18px "microsoft yahei";
  text-align: center;
}
.drawer_content {
  height: 700rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border: rgb(61, 61, 61) 1px solid;
  background-color: rgb(240, 240, 240);
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
